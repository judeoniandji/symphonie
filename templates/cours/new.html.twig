
{% extends 'base.html.twig' %}

{% block title %}Créer un Nouveau Cours{% endblock %}

{% block body %}
    <h1>Créer un Nouveau Cours</h1>

    {{ form_start(form) }}
        {{ form_row(form.module) }}
        {{ form_row(form.professeur) }}
        {{ form_row(form.classes) }}
        <button type="submit">Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_cours_index') }}">Retour à la liste des cours</a>
{% endblock %}
